@model GraduationProject.ViewModels.SMS.SendSMSVM

@{
    ViewData["Title"] = "Send SMS Message";
}

<hr />

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Page/</span>Send SMS Message</h4>

    <!-- Basic Layout & Basic with Icons -->
    <div class="row">
        <!-- Basic Layout -->
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-header d-flex align-items-center justify-content-between">
                    
                    <small class="text-muted float-end">SMS Message</small>
                </div>
                <div class="card-body">
                    <form asp-action="Send" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" label asp-for="MobileNumber"></label>
                            <div class="col-sm-6">
                                <input type="text" asp-for="MobileNumber" class="form-control" id="basic-default-name" placeholder="Enter Mobile Number ...." />
                                 <span asp-validation-for="MobileNumber" class="text-danger"></span>
                            </div>
                           
                        </div>
                        <div class="row mb-3">
                          <label asp-for="Body" class="col-sm-2 col-form-label"></label>
                          <div class="col-sm-6">
                            <textarea asp-for="Body"
                              id="basic-default-message"
                              class="form-control"
                              placeholder="Hi, Enter the text message to be sent......"
                              aria-label="Hi, Do you have a moment to talk Joe?"
                              aria-describedby="basic-icon-default-message2"
                            ></textarea>
                            <span asp-validation-for="Body" class="text-danger"></span>
                          </div>
                           
                        </div>
                        <div class="row justify-content-end">
                            <div class="col-sm-10">
                                <button type="submit"  class="btn btn-primary">Send</button>
                                <a asp-controller="home" asp-action="Index" class="btn btn-dark">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
