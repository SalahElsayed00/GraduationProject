@model IEnumerable<Case>

@{
    ViewData["Title"] = "Pending-Cases";
    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}
<link rel="stylesheet" href="~/css/tables.css">
<div class="container-fluid my-5 bg-white p-3 mytable">
    <div class="row mb-4">
        <div class="col-6">
            <h5 class="tableName mb-4 mt-2">pending Cases Table</h5>
        </div>
        <div class="col-6 text-end">
            <a asp-action="create" class="btn btn-outline-primary">Create New Case</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model =>model.NationalId)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="align-middle">
                    <td class="d-flex align-items-center">
                        <span>@item.Name</span>
                    </td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.NationalId</td>
                    <td class="text-end gap-1">
                        <a asp-action="details" asp-route-id="@item.Id" class="btn btn-outline-success"><i class="fa-solid fa-circle-info"></i> Details</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-info">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
        @if (Model.Any())
        {
             <tfoot>
            <tr>
                <td><strong>Number of Pending Case: </strong> @TempData["count"]</td>
                <td><a asp-controller="Reports" asp-action="PendingCases" class="btn btn-outline-info">Export Pdf</a></td>

            </tr>
        </tfoot>
        }
    </table>
</div>
<div class="container">
    @if (pager.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">
            @if (pager.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Case" asp-action="PendingCases" asp-route-pg="1">First</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="Case" asp-action="PendingCases" asp-route-pg="@(pager.CurrentPage - 1)">Previous</a>
                </li>
            }

            @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
            {
                <li class="page-item @(pge == pager.CurrentPage ?  "active" : "")">
                    <a class="page-link" asp-controller="Case" asp-action="PendingCases" asp-route-pg="@pge"> @pge </a>
                </li>
            }
            @if (pager.CurrentPage < pager.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Case" asp-action="PendingCases" asp-route-pg="@(pager.CurrentPage +1)">Next</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="Case" asp-action="PendingCases" asp-route-pg="@(pager.TotalPages)">Last</a>
                </li>
            }
        </ul>
    }
</div>
