@model IEnumerable<Region>

@{
    ViewData["Title"] = "Index";
    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}
<link rel="stylesheet" href="~/css/tables.css">
<div class="container-fluid my-5 bg-white p-3 mytable">
	<div class="row mb-4">
		<div class="col-6">
			<h5 class="tableName mb-4 mt-2">Regions Table</h5>
		</div>
		<div class="col-6 text-end">
			<a asp-action="create" class="btn btn-outline-primary">Create New Region</a>
		</div>
	</div>
<table class="table">
	<thead>
		<tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
			<th>
                @Html.DisplayNameFor(model => model.City.Governorate)
            </th>
		</tr>
	</thead>
	@foreach (var item in Model)
	{
		<tr>
			<td>
                @item.Name
            </td>
            <td>
                @item.City.Name
            </td>
			<td>
                @item.City.Governorate.Name
            </td>
			<td class="text-end gap-1">
				<a asp-action="edit" asp-route-id="@item.Id" class="btn btn-outline-secondary"><i class="fa-solid fa-pen"></i> Edit</a>
				<button data-bs-toggle="modal" data-bs-target="#Modal" class="btn btn-outline-danger"
					onclick="document.getElementById('deleteform').action = '/region/delete/@item.Id'">
					<i class="fa-solid fa-trash me-1"></i>Delete
				</button>
			</td>
		</tr>
	}
</table>
</div>
<div class="container">
    @if (pager.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">
            @if (pager.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Region" asp-action="Index" asp-route-pg="1">First</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="Region" asp-action="Index" asp-route-pg="@(pager.CurrentPage - 1)">Previous</a>
                </li>
            }

            @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
            {
                <li class="page-item @(pge == pager.CurrentPage ?  "active" : "")">
                    <a class="page-link" asp-controller="Region" asp-action="Index" asp-route-pg="@pge"> @pge </a>
                </li>
            }
            @if (pager.CurrentPage < pager.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Region" asp-action="Index" asp-route-pg="@(pager.CurrentPage +1)">Next</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="Region" asp-action="Index" asp-route-pg="@(pager.TotalPages)">Last</a>
                </li>
            }
        </ul>
    }
</div>
<div class="modal" id="Modal" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Case Category</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
			</div>
			<div class="modal-body">
				Are you sure you want delete this governorate ?
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
				<form id="deleteform" asp-action="delete" method="post">
					<button class="btn btn-danger">Yes</button>
				</form>
			</div>
		</div>
	</div>
</div>

